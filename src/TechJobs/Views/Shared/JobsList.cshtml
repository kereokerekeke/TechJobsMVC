<h3>@ViewBag.jobs.Count Result(s)</h3>

@if (ViewBag.jobs != null)
{

    // TODO #2 - Loop over jobs dictionary and displays all job fields

    @foreach (Dictionary<string, string> job in ViewBag.jobs)
    {
        <table class="job-listing">
            <tbody>
                @foreach (KeyValuePair<string, string> column in job)
                {
                    <tr>
                        <td>@char.ToUpper(@column.Key[0])@column.Key.Substring(1)</td>
                        <td><a asp-controller="Search" asp-action="Results" asp-route-searchType="@column.Key" asp-route-searchTerm="@column.Value">@column.Value</a></td>
                    </tr>


                }
            </tbody>
        </table>
    }
}